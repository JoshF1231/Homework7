#include <stdio.h>
#include <math.h>

void inputArray(int* arr, int n) {
	
	for (int i = 0; i < n; i++) {
		scanf_s("%d", arr + i);
	}
	return;
}

void printArray(int* arr, int n) {
	for (int i = 0;i < n;i++) {
		printf("%d,", *(arr + i));
	}
	printf("\n");
}

void arrCalc(int* arr, int n, int* max, int* min, int* sum, double* avg, int* isEven) {
	*max = arr[0];
	*min = arr[0];
	for (int i = 0; i < n; i++) {
		if (*(arr + i) > *max)
			*max = *(arr + i);
		if (*(arr + i) < *min) 
			*min = *(arr + i);
		if ((*(arr + i) % 2)==0)
			*isEven = 1;
		*sum = *sum + *(arr + i);
	}
	*avg = (*sum / (double)n);
}

int Exercise74c(int* arr,int n) {
	for (int i = 1;i < n-1;i++) {
		if (*(arr + i) == *(arr + i - 1) + *(arr + i + 1))
			return 1;
	}
	return 0;
}

int Exercise74cb(int* arr, int n) {
	if (n == 0)
		return 0;
	if (*(arr + n - 1) == *(arr + n) + *(arr + n - 2)) {
		return 1;
	}
	else return 1*Exercise74cb(arr, n - 1);
}

void Exercise75fca(int* arr, int n) {
	int temp = 0;
	for (int i = 0;i< n/2;i++) {
		int temp = *(arr + i);
		*(arr + i) = *(arr + n-1-i);
		*(arr + n-1-i) = temp;
	}
}

void Exercise75cb(int* arr, int n) {
	int temp = *(arr+n-1);
	if (n == 0 || n == 1)
		return;
	else {
		*(arr+n-1) = *arr;
		*arr = temp;
		Exercise75cb(arr + 1, n-2);
	}
}

void main() {
	int max, min, sum=0, isEven=0;
	double avg;
	int arr[5];
	inputArray(arr, 5);
	printArray(arr, 5);
	Exercise75cb(arr, 5);
	printArray(arr, 5);
}
